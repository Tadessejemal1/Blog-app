<h1 class='header'>Add a new Post</h1>

<% flash.each do |key, message| %>
  <p><%= message %></p>
<% end %>

<%= form_with model: @post, url: user_posts_path, method: :post, local: true, class: "form-control" do |form| %>
  <div>
    <%= form.label :title, "Enter Your Title" %><br>
    <%= form.text_field :title, size: "150x5", class:"post-title" %>
  </div>

  <div>
    <%= form.label :text, "Enter Your Text" %><br>
    <%= form.text_area :text, size: "150x5", class:"post-title"%>
  </div>

  <%= form.hidden_field :comments_counter, value: 0 %>
  <%= form.hidden_field :likes_counter, value: 0 %>
  <%= form.submit "Create Post" %>
<% end %>